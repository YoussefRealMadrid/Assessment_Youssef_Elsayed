<Window x:Class="Assessment_Youssef_Elsayed.DoctorPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assessment_Youssef_Elsayed"
        mc:Ignorable="d"
        Title="DoctorPage" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="AppointmentsDataGrid" AutoGenerateColumns="False" Grid.Row="0" SelectionChanged="AppointmentsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Appointment Id" Binding="{Binding AppId}"/>
                <DataGridTextColumn Header="Doctor Id" Binding="{Binding DoctorId}"/>
                <DataGridTextColumn Header="Patient Id" Binding="{Binding PatientId}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding AppDateTime}"/>
                <DataGridTextColumn Header="Day" Binding="{Binding AppDay}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding AppStatus}"/>
                <DataGridTextColumn Header="Reason" Binding="{Binding AppReason}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Task Status" FontSize="30" FontWeight="Bold"/>
            <TextBox x:Name="StatusBox" Width="400"/>
            <Button Content="Save" Background="Black" Foreground="White" Width="200" FontSize="30" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>

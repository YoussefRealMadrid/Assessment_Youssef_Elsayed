<Window x:Class="Assessment_Youssef_Elsayed.SearchPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assessment_Youssef_Elsayed"
        mc:Ignorable="d"
        Title="SearchPatient" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Top">
            <TextBlock Text="Patient Name:  " FontSize="30" Foreground="Black" FontWeight="Bold"/>
            <TextBox x:Name="PatientNameBox" Width="450"/>
            <Button Content="Search Patient" Background="Black" Foreground="White" Width="auto" Margin="10,0,0,0" Click="Button_Click"/>
        </StackPanel>
        <Button Content="Back" Background="Black" Foreground="White" FontSize="20" VerticalAlignment="Bottom" Click="Button_Click_1"/>

    </Grid>
</Window>

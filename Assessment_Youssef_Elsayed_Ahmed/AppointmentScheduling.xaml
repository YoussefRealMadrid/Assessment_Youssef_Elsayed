<Window x:Class="Assessment_Youssef_Elsayed.AppointmentScheduling"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assessment_Youssef_Elsayed"
        mc:Ignorable="d"
        Title="AppointmentScheduling" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Width="200" Height="30" Content="Logout" Background="Black" Foreground="White" Click="Button_Click"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Width="200" Height="30" Content="Add Patient" Background="Black" Foreground="White" Click="Button_Click_1"/>
            <Button Grid.Column="1" Width="200" Height="30" Content="Search Patient" Background="Black" Foreground="White" Click="Button_Click_2"/>
        </Grid>
        <Button Grid.Row="2" Width="200" Height="30" Content="Add Appointment" Background="Black" Foreground="White" Click="Button_Click_3"/>
        <Button Grid.Row="3" Width="200" Height="30" Content="Edit Appointments" Background="Black" Foreground="White" Click="Button_Click_5"/>
        <Button Grid.Row="4" Width="200" Height="30" Content="Delete Appointment" Background="Black" Foreground="White" Click="Button_Click_4"/>
    </Grid>
</Window>

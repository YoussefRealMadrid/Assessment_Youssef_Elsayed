<Window x:Class="Assessment_Youssef_Elsayed.EditAppointments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assessment_Youssef_Elsayed"
        mc:Ignorable="d"
        Title="EditAppointments" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Appointment Id: " FontSize="30"/>
                    <Border BorderBrush="Black" BorderThickness="2" Width="40">
                        <TextBlock x:Name="AppIdText" FontSize="25"/>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Doctor Id: " FontSize="30"/>
                    <TextBox x:Name="AppDocIdText" Width="40" BorderBrush="Black" BorderThickness="2"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="Patient Id: " FontSize="30"/>
                    <TextBox x:Name="AppPatIdText" Width="40" BorderBrush="Black" BorderThickness="2"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Date: " FontSize="30"/>
                    <TextBox x:Name="AppDateText" Width="190" BorderBrush="Black" BorderThickness="2"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Day: " FontSize="30"/>
                    <TextBox x:Name="AppDayText" Width="120" BorderBrush="Black" BorderThickness="2"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="Status: " FontSize="30"/>
                    <TextBox x:Name="AppStatText" Width="170" BorderBrush="Black" BorderThickness="2"/>
                </StackPanel>
            </Grid>
            <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center">
                <TextBlock Text="Reason:" FontWeight="Bold" Foreground="Black" FontSize="30"/>
                <TextBox x:Name="AppReaText" Height="40" Width="687" BorderBrush="Black" BorderThickness="2"/>
            </StackPanel>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Content="Edit Appointment" Background="Black" Foreground="White" Grid.Column="0" FontWeight="Bold" FontSize="30" Click="Button_Click"/>
                <Button Content="Back" Background="Black" Foreground="White" Grid.Column="1" FontWeight="Bold" FontSize="30" Click="Button_Click_1"/>
            </Grid>
        </Grid>
        <DataGrid x:Name="AppointmentsDataGrid" AutoGenerateColumns="False" Grid.Row="1" SelectionChanged="AppointmentsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Appointment Id" Binding="{Binding AppId}"/>
                <DataGridTextColumn Header="Doctor Id" Binding="{Binding DoctorId}"/>
                <DataGridTextColumn Header="Patient Id" Binding="{Binding PatientId}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding AppDateTime}"/>
                <DataGridTextColumn Header="Day" Binding="{Binding AppDay}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding AppStatus}"/>
                <DataGridTextColumn Header="Reason" Binding="{Binding AppReason}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

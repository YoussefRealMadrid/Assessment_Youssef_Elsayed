<Window x:Class="Assessment_Youssef_Elsayed.AddPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assessment_Youssef_Elsayed"
        mc:Ignorable="d"
        Title="AddPatient" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Patient Name:  " FontSize="25" Foreground="Black" FontWeight="Bold"/>
            <TextBox x:Name="Patientnametext" Width="250"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBlock Text="Patient Number:  " FontSize="25" Foreground="Black" FontWeight="Bold"/>
            <TextBox x:Name="Patientnumbertext" Width="250"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBlock Text="Patient Date Of Birth:  " FontSize="25" Foreground="Black" FontWeight="Bold" Grid.Row="2"/>
            <TextBox x:Name="Patientdateofbirthtext" Width="250"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <TextBlock Text="Patient Notes:  " FontSize="25" Foreground="Black" FontWeight="Bold"/>
            <TextBox x:Name="Patientnotestext" Width="250"/>
        </StackPanel>
        <Button Content="Add Patient" Width="200" Click="Button_Click" Background="Black" Foreground="White" Grid.Row="4"/>
    </Grid>
</Window>
